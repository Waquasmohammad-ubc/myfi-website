---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
}

const { title, description, canonicalUrl } = Astro.props;
const siteUrl = 'https://my-fi.ca';
const fullCanonical = canonicalUrl ? `${siteUrl}${canonicalUrl}` : siteUrl;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="robots" content="index, follow">

  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:url" content={fullCanonical}>
  <meta property="og:locale" content="en_CA">

  <link rel="canonical" href={fullCanonical}>
  <link rel="icon" type="image/png" href="/logo.png">

  <title>{title}</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
</head>
<body>
  <header class="header">
    <div class="container">
      <nav class="nav">
        <a href="/" class="logo"><img src="/logo.png" alt="MyFi" class="logo-img" /></a>
        <div class="nav-links hide-mobile">
          <a href="/#how-it-works">How It Works</a>
          <a href="/#features">Features</a>
          <a href="/about">About</a>
        </div>
        <div class="nav-actions">
          <a href="https://app.my-fi.ca" class="btn btn-primary">Get Started</a>
          <button class="menu-btn hide-desktop" id="menuBtn" aria-label="Menu">
            <span></span>
            <span></span>
          </button>
        </div>
      </nav>
    </div>
  </header>

  <div class="mobile-menu" id="mobileMenu">
    <a href="/#how-it-works">How It Works</a>
    <a href="/#features">Features</a>
    <a href="/about">About</a>
    <a href="https://app.my-fi.ca" class="btn btn-primary" style="margin-top: var(--space-4);">Get Started</a>
  </div>

  <main>
    <slot />
  </main>

  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-brand">
          <a href="/" class="logo"><img src="/logo.png" alt="MyFi" class="logo-img" /></a>
          <p>AI-powered financial guidance for Canadians.</p>
        </div>
        <div class="footer-links-grid">
          <div class="footer-col">
            <h4>Product</h4>
            <a href="/#how-it-works">How It Works</a>
            <a href="/#features">Features</a>
            <a href="https://app.my-fi.ca">Start Free</a>
          </div>
          <div class="footer-col">
            <h4>Company</h4>
            <a href="/about">About</a>
            <a href="/privacy">Privacy</a>
            <a href="/terms">Terms</a>
          </div>
          <div class="footer-col">
            <h4>Contact</h4>
            <a href="mailto:connect@my-fi.ca">connect@my-fi.ca</a>
          </div>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; {new Date().getFullYear()} MyFi. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <script>
    const menuBtn = document.getElementById('menuBtn');
    const mobileMenu = document.getElementById('mobileMenu');

    menuBtn?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('active');
      menuBtn?.classList.toggle('active');
    });

    document.querySelectorAll('.mobile-menu a').forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu?.classList.remove('active');
        menuBtn?.classList.remove('active');
      });
    });

    const header = document.querySelector('.header');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 10) {
        header?.classList.add('scrolled');
      } else {
        header?.classList.remove('scrolled');
      }
    });

    // Scroll animations using Intersection Observer
    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.1
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          // Add staggered delay for child elements
          const delay = entry.target.dataset.delay || '0';
          entry.target.style.transitionDelay = delay + 'ms';
          entry.target.classList.add('in-view');
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    // Observe all elements with scroll animation classes
    document.querySelectorAll('.scroll-fade-up, .scroll-fade-in, .scroll-slide-left, .scroll-slide-right, .scroll-scale').forEach((el, index) => {
      // Add staggered delays for elements in same section
      if (!el.dataset.delay) {
        const parent = el.closest('section');
        if (parent) {
          const siblings = parent.querySelectorAll('.scroll-fade-up, .scroll-fade-in, .scroll-slide-left, .scroll-slide-right, .scroll-scale');
          siblings.forEach((sib, i) => {
            if (!sib.dataset.delay) sib.dataset.delay = String(i * 100);
          });
        }
      }
      observer.observe(el);
    });
  </script>

  <style>
    .header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 100;
      padding: var(--space-3) 0;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      transition: all 0.2s ease;
    }

    .header.scrolled {
      box-shadow: 0 1px 20px rgba(147, 51, 234, 0.08);
    }

    .nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .logo {
      display: flex;
      align-items: center;
      gap: var(--space-2);
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--gray-900);
    }

    .logo-img {
      height: 72px;
      width: auto;
    }

    .nav-links {
      display: flex;
      align-items: center;
      gap: var(--space-8);
    }

    .nav-links a {
      font-size: 0.9375rem;
      color: var(--gray-600);
      transition: color 0.2s ease;
    }

    .nav-links a:hover {
      color: var(--purple-600);
    }

    .nav-actions {
      display: flex;
      align-items: center;
      gap: var(--space-4);
    }

    .menu-btn {
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: 5px;
      width: 32px;
      height: 32px;
      background: none;
      border: none;
      cursor: pointer;
      padding: 4px;
    }

    .menu-btn span {
      display: block;
      width: 100%;
      height: 2px;
      background: var(--gray-700);
      transition: all 0.2s ease;
    }

    .menu-btn.active span:first-child {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .menu-btn.active span:last-child {
      transform: rotate(-45deg) translate(5px, -5px);
    }

    .mobile-menu {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 99;
      background: var(--white);
      padding: calc(80px + var(--space-8)) var(--space-6) var(--space-8);
      display: flex;
      flex-direction: column;
      opacity: 0;
      visibility: hidden;
      transition: all 0.2s ease;
    }

    .mobile-menu.active {
      opacity: 1;
      visibility: visible;
    }

    .mobile-menu a {
      font-size: 1.125rem;
      color: var(--gray-700);
      padding: var(--space-4) 0;
      border-bottom: 1px solid var(--gray-100);
    }

    .mobile-menu a:hover {
      color: var(--purple-600);
    }

    .footer {
      background: linear-gradient(135deg, var(--purple-900) 0%, var(--purple-800) 100%);
      color: var(--white);
      padding: var(--space-16) 0 var(--space-8);
    }

    .footer-content {
      display: grid;
      grid-template-columns: 1fr;
      gap: var(--space-10);
      padding-bottom: var(--space-10);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    @media (min-width: 768px) {
      .footer-content {
        grid-template-columns: 1.5fr 2fr;
      }
    }

    .footer-brand .logo {
      color: var(--white);
      display: flex;
      margin-bottom: var(--space-3);
    }

    .footer-brand p {
      color: var(--purple-200);
      font-size: 0.9375rem;
    }

    .footer-links-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-6);
    }

    @media (max-width: 640px) {
      .footer-links-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    .footer-col h4 {
      font-size: 0.8125rem;
      font-weight: 500;
      color: var(--purple-300);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: var(--space-4);
    }

    .footer-col a {
      display: block;
      color: var(--purple-100);
      font-size: 0.9375rem;
      margin-bottom: var(--space-3);
      transition: color 0.2s ease;
    }

    .footer-col a:hover {
      color: var(--white);
    }

    .footer-bottom {
      padding-top: var(--space-8);
    }

    .footer-bottom p {
      font-size: 0.875rem;
      color: var(--purple-300);
    }
  </style>
</body>
</html>
